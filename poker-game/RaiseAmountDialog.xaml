<Window x:Class="poker_game.RaiseAmountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raise Amount" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Enter the amount you want to raise:" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <TextBox x:Name="txtRaiseAmount" Width="100" Margin="5"/>
            <Button x:Name="btnOk" Content="OK" Width="50" Margin="5" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>